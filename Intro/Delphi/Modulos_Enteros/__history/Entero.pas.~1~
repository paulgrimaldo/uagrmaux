unit Entero;

interface
    var n : Integer;
    function CantidadDigitos() : Integer;
    procedure RegistrarN(nu: Integer);
    function Ejercicio9(): Integer;
implementation

      procedure RegistrarN(nu: Integer);
      begin
        n:= nu;
      end;

      function CantidadDigitos(): Integer;
      var c,n1: Integer;
      begin
           c:=0;
           n1:=n;
           while n1>0 do
           begin
             n1:=n1 div 10;
             c:=c+1;
           end;
           Result:=c;
      end;

      //De un número natural, mostrar el digito del medio, si dicho numero tiene cantidad de dígitos impares
      function Ejercicio9(): Integer;
      var n1, c, d,i,a,r: Integer;
      begin
        n1:=n;
        c:= CantidadDigitos();
        d:=0;

        if c mod 2 = 1 then
        begin
          i:= (c div 2) +1;
          a:=1;
          while a<=i do
          begin
             d:= n1 mod 10;
             n1:= n1 div 10;
             a:=a+1;
          end;
          r:=d;
          Result:=r;
        end
        else
        begin
          r:=-1;
        end;

        Result:=r;
      end;
end.
